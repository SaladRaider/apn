<section class="normal-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ol class="breadcrumb">
          <li><%= link_to 'Home', root_path %></li>
          <li class="active">Contact</li>
        </ol>
      </div>
      <div class="col-md-8">
      <%= form_for @contact do |f| %>
        <% if @contact.errors.any? %>
        <div id="errors">
          <h4><%= pluralize(@contact.errors.count, "error") %> prevented this contact from saving</h4>
          <ul>
            <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <%= f.text_field :org_club, class: ["text-box-outline", "wow", "fadeInUp", "col-xs-12"], placeholder: 'Organization/Club' %>
        <div class="btn-group-standard">
        <div class="text-box-outline wow fadeInUp col-xs-4">Date to Air:</div>
        <%= f.date_field :sub_date, class: ["text-box-outline", "wow", "fadeInUp", "col-xs-8"], placeholder: 'Date to Air' %>
        </div>
        <div class="btn-group-standard">
        <%= f.text_field :full_name, class: ["text-box-outline", "wow", "fadeInUp", "col-xs-8"], placeholder: 'Full Name' %>
        <%= f.text_field :id_number, class: ["text-box-outline", "wow", "fadeInUp", "col-xs-4"], placeholder: 'ID Number' %>
        </div>
        <%= f.text_field :email, class: ["text-box-outline", "wow", "fadeInUp", "col-xs-12"], placeholder: 'Email' %>
        <%= f.text_field :subject, class: ["text-box-outline", "wow", "fadeInUp", "col-xs-12"], placeholder: 'Subject' %>
        <%= f.text_area :message, class: ["text-box-outline", "wow", "fadeInUp", "col-xs-12"], placeholder: 'Type message here...' %>
        <%= f.submit :submit_contact, value: "Send", class: ["btn-outline-white", "wow", "fadeInUp", "col-xs-12"] %>
        <% end %>
      </div>
      <div class="col-md-4">
        <%= markdown(Content.find(8).text) %>
      </div>
    </div>
  </div>
</section>