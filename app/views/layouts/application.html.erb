    <%= javascript_include_tag 'bootstrap' %>
    <%= javascript_include_tag 'wow' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag "rails" %>
</body>
</html>
