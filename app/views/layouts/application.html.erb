
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">

	<title>APN Official Website</title>

	<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
	<link href='https://fonts.googleapis.com/css?family=Droid+Serif' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
	<!--load amimate.css from CDN-->
	<!--<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.min.css"> 
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css">-->
    <%= stylesheet_link_tag 'animate', media: 'all' %>
    <%= stylesheet_link_tag 'bootstrap', media: 'all' %>
    <%= stylesheet_link_tag 'font-awesome', media: 'all' %>
    <%= stylesheet_link_tag 'jquery-ui', media: 'all' %>
    <%= stylesheet_link_tag 'jquery-ui.structure', media: 'all' %>
    <%= stylesheet_link_tag 'jquery-ui.theme', media: 'all' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

    <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar-scroll hide-init">
      <div class="container-fluid">
        <div class="container">
          <div class="collapseable-menu hide-init">
            <%= link_to videos_path do %>
            <div class="nav-link-outer"><div class="nav-link">Videos</div></div>
            <% end %>
            <%= link_to '/suggest' do %>
            <div class="nav-link-outer"><div class="nav-link">Suggest</div></div>
            <% end %>
            <%= link_to '/join' do %>
            <div class="nav-link-outer"><div class="nav-link">Join</div></div>
            <% end %>
            <%= link_to '/about' do %>
            <div class="nav-link-outer"><div class="nav-link">About</div></div>
            <% end %>
            <%= link_to '/contact' do %>
            <div class="nav-link-outer"><div class="nav-link">Contact</div></div>
            <% end %>
            <% if user_signed_in? %>
            <%= link_to destroy_user_session_path(@user), :method => :delete do %>
            <div class="nav-link-outer"><div class="nav-link">Log Out</div></div>
            <% end %>
            <% else %>
            <%= link_to user_session_path(@user) do %>
            <div class="nav-link-outer"><div class="nav-link">Log In</div></div>
            <% end %>
            <% end %>
        </div>
        <%= link_to root_path do %>
        <div class="logo-small"><p>A&nbsp;&nbsp;&nbsp;P<br />N</p></div>
        <% end %>
        <div class="link-container hidden-xs">
            <%= link_to videos_path do %>
            <div class="nav-link-outer"><div class="nav-link">Videos</div></div>
            <% end %>
            <%= link_to '/suggest' do %>
            <div class="nav-link-outer"><div class="nav-link">Suggest</div></div>
            <% end %>
            <%= link_to '/join' do %>
            <div class="nav-link-outer"><div class="nav-link">Join</div></div>
            <% end %>
            <%= link_to '/about' do %>
            <div class="nav-link-outer"><div class="nav-link">About</div></div>
            <% end %>
            <%= link_to '/contact' do %>
            <div class="nav-link-outer"><div class="nav-link">Contact</div></div>
            <% end %>
            <% if user_signed_in? %>
            <%= link_to destroy_user_session_path(@user), :method => :delete do %>
            <div class="nav-link-outer"><div class="nav-link">Log Out</div></div>
            <% end %>
            <% else %>
            <%= link_to user_session_path(@user) do %>
            <div class="nav-link-outer"><div class="nav-link">Log In</div></div>
            <% end %>
            <% end %>
        </div>
        <div class="visible-xs-inline-block nav-ham-toggle glyphicon glyphicon-menu-hamburger"></div>
    </div>
</div>
</div>

<div class="container">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
</div>

<%= javascript_include_tag 'jquery' %>
<%= javascript_include_tag 'jquery-ui' %>

<%= yield %>

