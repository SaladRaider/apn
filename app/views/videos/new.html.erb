<span id="page-content-start"></span>

  <section class="normal-section">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <h3>Submit Video</h3>
        </div>
        <div class="col-md-12">
          <ol class="breadcrumb">
            <li><a href="">Home</a></li>
            <li><a href="">Videos</a></li>
            <li class="about-person.html">New</li>
          </ol>
        </div>
        <div class="col-xs-12">
        <%= form_for :video, url: videos_path do |f| %>
          <%= f.text_field :show, class: ["text-box-outline", "wow", "fadeInUp", "col-xs-2"], placeholder: :show %>
          <%= f.text_field :title, class: ["text-box-outline", "wow", "fadeInUp", "col-xs-10"], placeholder: :title %>
          <%= f.text_field :link, class: ["text-box-outline", "wow", "fadeInUp", "col-xs-12"], placeholder: :link %>
          <%= f.text_area :description, class: ["text-box-outline", "wow", "fadeInUp", "col-xs-12"], placeholder: :description, rows: 5 %>
          <%= f.text_field :keywords, class: ["text-box-outline", "wow", "fadeInUp", "col-xs-12"], placeholder: :keywords %>
          <div class="selectDiv">
            <%= f.select(:category) do %>
              <% [['Show',1],['Skit', 2],['Promo',3],['Story',4]].each do |c| -%>
                <%= content_tag(:option, c.first, value: c.last) %>
              <% end %>
            <% end %>
          </div>
          <div class="row col-xs-12">
            <div class="col-xs-4 table-header">
              <p>Name</p>
            </div>
            <div class="col-xs-8 table-header">
              <p>Job</p>
            </div>
            <div class="col-xs-4">
              <p>Peter Veerman</p>
            </div>
            <div class="col-xs-7">
              <p>Editor</p>
            </div>
          </div>
          <input type="text" class="text-box-outline wow fadeInUp col-xs-4" placeholder="Name" />
          <input type="text" class="text-box-outline wow fadeInUp col-xs-8" placeholder="Job Description" />
          <a href="#" class="btn-outline-white wow fadeInUp fill-width"><span class="fa fa-plus"></span></a>
          <%= f.submit :submit_video, value: "Submit Video", class: ["btn-outline-white", "wow", "fadeInUp", "fill-width"] %>
          <% end %>
        </div>
        
      </div>
    </div>
  </section>